<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <!-- Container für die Icons, um sie an den Rändern zu platzieren -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- 1. Das sichtbare Such-Icon (nicht mehr klickbar) -->
                    <ImageView
                        android:id="@+id/icon_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:src="@drawable/search"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/icon_color_on_bg" />

                    <!-- 2. Der unsichtbare, klickbare Bereich FÜR DAS SUCH-ICON -->
                    <View
                        android:id="@+id/search_click_area"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintBottom_toBottomOf="@id/icon_search"
                        app:layout_constraintEnd_toEndOf="@id/icon_search"
                        app:layout_constraintStart_toStartOf="@id/icon_search"
                        app:layout_constraintTop_toTopOf="@id/icon_search" />


                    <!-- 3. Das sichtbare Filter-Icon (nicht mehr klickbar) -->
                    <ImageView
                        android:id="@+id/icon_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:padding="8dp"
                        android:src="@drawable/filter"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/icon_color_on_bg" />

                    <!-- 4. Der unsichtbare, klickbare Bereich FÜR DAS FILTER-ICON -->
                    <View
                        android:id="@+id/filter_click_area"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintBottom_toBottomOf="@id/icon_filter"
                        app:layout_constraintEnd_toEndOf="@id/icon_filter"
                        app:layout_constraintStart_toStartOf="@id/icon_filter"
                        app:layout_constraintTop_toTopOf="@id/icon_filter" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.MaterialToolbar>

            <!-- 1. Horizontale Scroll-Ansicht, damit die Chips nicht umbrechen -->
            <HorizontalScrollView
                android:id="@+id/filter_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp"
                android:scrollbars="none"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- 2. Die ChipGroup, die die einzelnen Chips enthält -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_filters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipIconTint="@color/chip_icon_tint"
                    app:chipSpacing="8dp"
                    app:chipStrokeWidth="0dp"
                    app:singleLine="true"
                    app:singleSelection="true">

                    <!-- 3. Die einzelnen Chips -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_alle_routen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:checked="true"
                        android:text="Alle Routen"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:chipStrokeWidth="0dp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Chip.Pill" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_restaurants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Restaurants"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:chipStrokeWidth="0dp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Chip.Pill" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_sehenswuerdigkeiten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Sehenswürdigkeiten"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:chipStrokeWidth="0dp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Chip.Pill" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_Bars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Bars"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background_color"
                        app:chipStrokeWidth="0dp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Chip.Pill" />

                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/main_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!-- ======================================================= -->
                <!-- ABSCHNITT 1: VORGESCHLAGENE ROUTEN (KARUSSELL)         -->
                <!-- ======================================================= -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:paddingHorizontal="16dp"
                    android:text="Vorgeschlagene Routen"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_suggested_routes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_route_card" />

                <!-- LinearLayout als Hauptcontainer für alle folgenden Elemente -->
                <LinearLayout
                    android:id="@+id/all_routes_section_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp">

                    <!-- ======================================================= -->
                    <!-- ABSCHNITT 2: NEUIGKEITEN (VERTIKALE LISTE)              -->
                    <!-- ======================================================= -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Neuigkeiten"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_news"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_news_row" />


                    <!-- ======================================================= -->
                    <!-- ABSCHNITT 3: ALLE ROUTEN (VERTIKALE LISTE)               -->
                    <!-- ======================================================= -->
                    <TextView
                        android:id="@+id/title_all_routes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Alle Routen"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_all_routes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_route_card" />


                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <include
        android:id="@+id/reusable_button"
        layout="@layout/reusable_navigation_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="0dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
